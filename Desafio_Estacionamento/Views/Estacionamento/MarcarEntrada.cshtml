@model Desafio_Estacionamento.Models.Estacionamento

@{
    ViewData["Title"] = "MarcarEntrada";
}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.11/jquery.mask.min.js"></script>

<h1>Marcar Entrada</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MarcarEntrada">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Placa" class="control-label"></label>
                <input asp-for="Placa" style="text-transform:uppercase" class="form-control" id="placa" maxlength="8" placeholder="AAAA-111" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorarioChegada" class="control-label"></label>
                <input asp-for="HorarioChegada" class="form-control" />
                <span asp-validation-for="HorarioChegada" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Marcar entrada" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>
<script>
    $("#placa").mask("AAAA-000");

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
